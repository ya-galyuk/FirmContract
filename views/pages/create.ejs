
<div class="row">
    <div class="container">
        <h2 class="mt-4">Create a Firm</h2>

        <% if(typeof errors !== 'undefined'){
            if(errors.length > 0) { %>
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <ul class="m-0">
                        <% for (error of errors) { %>
                            <li><%= error %></li>
                        <% } %>
                    </ul>
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            <% }
        } %>

        <form action="/firms/create" method="post">

            <div class="form-row">
                <div class="col-md-3 mb-3">
                    <label for="name_firm">Name</label>
                    <input id="name_firm" type='text' class="form-control" name='name_firm' placeholder="Enter name">
                </div>
                <div class="col-md-3 mb-3">
                    <label for="ceo_firm">Ceo</label>
                    <input id="ceo_firm" type='text' class="form-control" name='ceo_firm' placeholder="Enter ceo">
                </div>
                <div class="col-md-6 mb-3">
                    <label for="address_firm">Address</label>
                    <input id="address_firm" type='text' class="form-control" name='address_firm' placeholder="Enter address">
                </div>
            </div>

            <div class="form-row">
                <button type="submit" class="btn btn-primary col mb-3">Create</button>
            </div>

        </form>

    </div>
</div>